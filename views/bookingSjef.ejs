<!DOCTYPE html>
<html lang="en">

  <head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Schmuka</title>

    <!-- Bootstrap core CSS -->
    <link href= "vendor/bootstrap/css/bootstrap.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="css/heroic-features.css" rel="stylesheet">

  </head>

  <body>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
      <div class="container">
        <a class="navbar-brand" href="#">Schmuka</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item active">
              <a class="nav-link" href="/">Hjem
                <span class="sr-only">(current)</span>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logg ut</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Page Content -->
    <div class="container">

      <!-- Jumbotron Header -->
      <header class="jumbotron my-4">
        <h1 class="display-3">Bookingsjef</h1>
        <p class="lead">Bookingtilbud, markedsinformasjon, billettrapporter.</p>
      </header>
      <!-- Nav tabs -->
      <ul class="nav nav-tabs" role="tablist">
        <li class="nav-item">
          <a class="nav-link active" data-toggle="tab" href="#home" role="tab">Alle konserter</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" data-toggle="tab" href="#pending" role="tab">Ventende bookingtilbud</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" data-toggle="tab" href="#sentToManager" role="tab">Bookingtilbud sendt til band</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" data-toggle="tab" href="#marketInfo" role="tab">Markedsinformasjon</a>       
        </li>
      </ul>

      <!-- Tab panes -->
      <div class="tab-content">
        <div class="tab-pane active" id="home" role="tabpanel">
          <table class="table">
          <thead>
            <tr>
              <th>Scene</th>
              <th>Konsert</th>
              <th>Tidspunkt</th>
            </tr>
          </thead>
          <tbody>
            <% for(var i=0; i<conc.length; i++) { 
                if(conc[i].approvedByBookingSjef == true && conc[i].approvedByManager) {
                  %>
            <tr>
                <td><%= conc[i].scene %></td>
                <td><%= conc[i].artist %></td>
                <td><%= conc[i].start %></td>
          </tr>
          <% }
          } %>
          </tbody>
        </table>
        </div>
        <div class="tab-pane" id="pending" role="tabpanel">
          <table class="table">
            <thead>
              <tr>
                <th>Scene</th>
                <th>Konsert</th>
                <th>Tidspunkt</th>
                <th>Arrangor</th>
                <th>Beregnet billettpris</th>
                <th>Avslå/Godkjenn</th>
              </tr>
            </thead>
            <tbody>
              <% for(var i=0; i<conc.length; i++) { 
                    if(conc[i].approvedByBookingSjef == false) {
                    %>
              <form action='/bookingSjef' method="POST">
                <tr>
                    <td><%=conc[i].scene%></td>
                    <td><div class="form-group"><input type="hidden" name="artistBooked" value="<%=conc[i].artist%>"><%=conc[i].artist%></div></td>
                    <td><div class="form-group"><input type="hidden" name="dateBooked" value="<%=conc[i].start%>"><%=conc[i].start%></div></td>
                    <td><%=conc[i].arranger%></td>
                    <td><%=conc[i].ticketPrice%></td>
                    <td><button class="btn btn-danger btn-sm" formaction="/bookingSjefDecline">Avslå</button>&nbsp&nbsp<button type="submit" class="btn btn-success btn-sm" formaction="/bookingSjefApprove">Godkjenn</button></td>

                </tr>
              </form>
            <% }
            } %>
            </tbody>
          </table>
        </div>
        <div class="tab-pane" id="sentToManager" role="tabpanel">
          <table class="table">
            <thead>
              <tr>
                <th>Scene</th>
                <th>Konsert</th>
                <th>Tidspunkt</th>
              </tr>
            </thead>
            <tbody>
              <% for(var i=0; i<conc.length; i++) { 
                  if(conc[i].approvedByBookingSjef == true && conc[i].approvedByManager == false) {
                    %>
              <tr>
                  <td><%= conc[i].scene %></td>
                  <td><%= conc[i].artist %></td>
                  <td><%= conc[i].start %></td>
            </tr>
            <% }
            } %>
            </tbody>  
          </table>
        </div>
        <div class="tab-pane" id="marketInfo" role="tabpanel">
            T0D0
            <!-- T0D0 
                  enten tabell eller søkefunksjonalitet for å finne markedsinformasjon på ønskede band
            -->
        </div>
      </div>


  	</div>

	</br>
	</br>
	</br>

    <!-- /.container -->

    <!-- Footer -->
    <footer class="py-3 bg-dark footer">
      <div class="container">
        <p class="m-0 text-center text-white">Copyright &copy; Schmuka 2017</p>
      </div>
    </footer>

    <!-- Bootstrap core JavaScript -->
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/popper/popper.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.min.js"></script>
     <script src="https://cdn of underscore"></script>

  </body>

</html>
